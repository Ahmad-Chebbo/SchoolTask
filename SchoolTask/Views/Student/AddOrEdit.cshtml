@model Student

@{
    ViewData["Title"] = "Create";
}

<h4>Student Form</h4>
<hr/>

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control"/>
                <span asp-validation-for="FullName" class="text-danger font-weight-bold"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="UniversityId" class="control-label"></label>
                    <input asp-for="UniversityId" type="number" min="1" max="99999999" class="form-control"/>
                    <span asp-validation-for="UniversityId" class="text-danger font-weight-bold"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" type="number" min="16" max="60" class="form-control"/>
                    <span asp-validation-for="Age" class="text-danger font-weight-bold"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input type="radio" asp-for="Gender" value="M"/>Male
                <input type="radio" asp-for="Gender" value="F"/>Female
                <br>
                <span asp-validation-for="Gender" class="text-danger font-weight-bold"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block"/>
                </div>
                <div class="form-group col-md-6">
                    <a href="#"  onclick= "history.go(-1)" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}