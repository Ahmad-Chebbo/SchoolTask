@model IEnumerable<Subject>


@{
    ViewData["Title"] = "Index";
}

<h4>Subjects List</h4>
<hr />

<table class="table table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            <a asp-action="Create" class="btn btn-outline-success">Add Subject</a>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var subject in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => subject.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => subject.Name)
            </td>
            <td>
                 <a asp-action="Detail" asp-route-id="@subject.Id" class="btn btn-primary">
                     <i class="fa fa-eye"></i>
                 </a>
                <a asp-action="Edit" asp-route-id="@subject.Id" class="btn btn-warning">
                    <i class="fa fa-edit"></i>
                </a>
                <form asp-route-id="@subject.Id" asp-action="Delete" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger d-inline" onclick="return confirm('Are you sure to delete this record?')">
                        <i class="fa fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

